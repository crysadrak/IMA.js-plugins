{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "module": "Node16",
    "moduleResolution": "Node16",
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
  },
  "exclude": [
    "**/__tests__/**"
  ]
}
